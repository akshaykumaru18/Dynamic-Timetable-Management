<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyDetails">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/colorWhite"
        android:id="@+id/ToolbarFacultyDetails">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ToolbarSubjectDetails"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="55dp"
        android:id="@+id/FacultyProfile">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:src="@color/common_google_signin_btn_text_dark_default"
            android:id="@+id/FacultyPhoto"
             />

        <TextView
            android:id="@+id/facultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FacultyPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Faculty Name"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Phone number-->
    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/design_default_color_primary"
        android:elevation="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/FacultyProfile"
        android:id="@+id/cardViewFacultyPh"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPhoneNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:text="Phone Number"
                android:textStyle="bold"
                android:textColor="#110001"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/tvPhoneNumberLabel"
                android:layout_marginTop="5dp"
                android:id="@+id/line"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFaculty_Ph_number"
                android:textIsSelectable="true"
                android:text="0000000000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="false"
                android:textSize="24sp"
                android:layout_below="@+id/line"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <!-- Email id-->
    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/design_default_color_primary"
        android:elevation="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardViewEmailId"
        android:layout_below="@+id/cardViewFacultyPh">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEmailidLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:text="Email-Id"
                android:textColor="#110001"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/tvEmailidLabel"
                android:layout_marginTop="5dp"
                android:id="@+id/line1"
                android:background="@color/colorPrimaryDark"
                tools:ignore="NotSibling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFacultyEmailid"
                android:textIsSelectable="true"
                android:text="google@gmail.com"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="false"
                android:textSize="24sp"
                android:layout_below="@+id/line1"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!-- Department-->
    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/design_default_color_primary"
        android:elevation="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardViewDepartment"
        android:layout_below="@+id/cardViewEmailId">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDepartmentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:text="Department"
                android:textStyle="bold"
                android:textColor="#110001"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/tvDepartmentLabel"
                android:layout_marginTop="5dp"
                android:id="@+id/line2"
                android:background="@color/colorPrimaryDark"
                tools:ignore="NotSibling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFacultyDepartment"
                android:text="Computer Science &amp; engineering"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="false"
                android:textSize="24sp"
                android:layout_below="@+id/line2"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.widget.RelativeLayout>